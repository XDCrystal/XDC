[Unit]
Description=Darkcrystal XDC service
After=network.target

[Service]
Type=oneshot
User=Dark
Group=Dark
PermissionsStartOnly=true
RemainAfterExit=yes
ExecStartPre=-/bin/mkdir -p /var/run/Dark
ExecStartPre=/bin/chown -R Dark:Dark /var/run/Dark/
ExecStart=/usr/lib/Dark/xdcd.sh --start
ExecStop=/usr/lib/Dark/xdcd.sh --stop

[Install]
WantedBy=multi-user.target
